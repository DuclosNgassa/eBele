	<style name="TableHeader" parent="AppBaseTheme">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">30dip</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_msg_input</item>
        <item name="android:background">@color/white</item>
	</style>
	
	<style name="TableItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:layout_margin">1dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">3dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_msg_input</item>
	</style>
	<style name="TableItemBewertung">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:layout_margin">1dip</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">3dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_msg_input</item>
	</style>
<!-- Calendar -->
    <style name="calendar_event_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FF6600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="background">
        <item name="android:background">@drawable/main_bg</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-2dip</item>
