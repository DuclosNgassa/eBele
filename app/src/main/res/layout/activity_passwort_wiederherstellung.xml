<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_frame"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp" >
 
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >
 
        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/txt_bg_rounded_corner"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_anmeldung"
            android:textColorHint="@color/hint_color" />
        
        <EditText
            android:id="@+id/secret"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="@drawable/txt_bg_rounded_corner"
            android:hint="@string/hint_secret"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_anmeldung"
            android:textColorHint="@color/hint_color" />
 
        <!-- anmeldung Button -->
 
        <Button
            android:id="@+id/btnPasswortWiederherstellung"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/btn_bg_rounded_corner"
            android:text="@string/btn_passwort_wiederherstellung"
            android:textColor="@color/btn_txt_color" />
 
        <!-- Link to anmeldung Screen -->
 
        <Button
            android:id="@+id/btnLinkToAnmeldungScreen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@null"
            android:text="@string/btn_link_fromWiederherstellung_toAnmeldung"
            android:textAllCaps="false"
            android:textColor="@color/btn_txt_color"
            android:textSize="15sp" />
    
    </LinearLayout>
 
</LinearLayout>
