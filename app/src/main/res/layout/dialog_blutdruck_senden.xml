<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/bg_frame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp" >

        <EditText
            android:id="@+id/sendenAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:hint="Email-Addresse!"
            android:inputType="textEmailAddress"
            android:background="@drawable/txt_bg_rounded_corner"
            android:singleLine="true" />

        <EditText
            android:id="@+id/betreff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@id/sendenAn"
            android:layout_margin="5dp"
            android:background="@drawable/txt_bg_rounded_corner"
            android:hint="Betreff"
            android:singleLine="true" />

        <EditText
            android:id="@+id/nachricht"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/betreff"
            android:layout_margin="5dp"
            android:background="@drawable/txt_bg_rounded_corner"
            android:gravity="top|start"
            android:hint=" Schreiben Sie Ihre Nachricht hier!"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nachricht"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_bg_rounded_corner"
            android:text="Ok" />

        <Button
            android:id="@+id/buttonAbbrechen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nachricht"
            android:layout_toRightOf="@id/buttonSend"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg_rounded_corner"
            android:text="Abbrechen" />

    </RelativeLayout>

</ScrollView>
